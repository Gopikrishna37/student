@model IEnumerable<DBcontext.DBModels.Product>

@{
    ViewBag.Title = "Existing";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}

<br />
<div class="productsidenav">

    <aside id="basicSidebar" class="pmd-sidebar bg-light pmd-z-depth" role="navigation">
        <ul class="nav flex-column pmd-sidebar-nav">
            <li class="nav-item">
                <a class="nav-link active" href="#">
                    <span class="media-body">Filters</span>
                </a>
            </li>
            <li class="nav-item pmd-user-info">
                <a data-toggle="collapse" href="#collapseExample" class="nav-link btn-user media align-items-center">
                    <div class="media-body">
                        Brand
                    </div>

                </a>
                <ul class="collapse" id="collapseExample" data-parent="#basicSidebar">
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span class="media-body"> @Html.CheckBox("isActive", true)   Bajaji</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span class="media-body"> @Html.CheckBox("isActive", true)   Royal Enfield</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span class="media-body"> @Html.CheckBox("isActive", true)   Honda</span>
                        </a>
                    </li>
                </ul>
            </li>
            <li class="nav-item pmd-user-info">
                <a data-toggle="collapse" href="#collapseExample1" class="nav-link btn-user media align-items-center">
                    <div class="media-body">
                        Price
                    </div>

                </a>
                <ul class="collapse" id="collapseExample1" data-parent="#basicSidebar">
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span class="media-body"> @Html.CheckBox("isActive", true)   Rs 80000 - Rs 90000</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span class="media-body"> @Html.CheckBox("isActive", true)   Rs 90000 - Rs 100000</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span class="media-body"> @Html.CheckBox("isActive", true)   Rs 100000 - Rs 120000</span>
                        </a>
                    </li>
                </ul>
            </li>
            <li class="nav-item pmd-user-info">
                <a data-toggle="collapse" href="#collapseExample2" class="nav-link btn-user media align-items-center">
                    <div class="media-body">
                        Rating
                    </div>

                </a>
                <ul class="collapse" id="collapseExample2" data-parent="#basicSidebar">
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span class="media-body"> @Html.CheckBox("isActive", true)  3</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span class="media-body"> @Html.CheckBox("isActive", true)  4</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span class="media-body"> @Html.CheckBox("isActive", true)5</span>
                        </a>
                    </li>
                </ul>
            </li>

        </ul>
    </aside>
</div>

<div class="body-content">
    <div id="Existing" class="row">
        @foreach (var item in Model)
        {

            <div class="col-md-4" style="padding: 15px 15px 15px 15px">
                <a href="#@item.ProductID" data-toggle="modal"><img src="@item.ImageLink" /></a>
                <table>
                    <tr id="productname">@item.Name - @item.Model</tr>
                    <tr id="price"><td>Rs./</td><td>@item.Price</td>  </tr>
                    <tr id="rating">
                        <td>Rating:</td>
                        <td>
                            @for (int i = 0; i < @item.Rating; i++)
                            {
                                <span class="fa fa-star checked"></span>
                            }
                        </td>
                    </tr>
                </table>
            </div>

            <!-- Button trigger modal -->

            <!-- Modal -->
            <div class="modal fade" id="@item.ProductID" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                          
                            <h3 class="modal-title" id="exampleModalLongTitle">
                                @item.Name - @item.Model
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </h3>
                          </div>
                        <div class="modal-body">
                            <img src="@item.ImageLink" />
                            <table>
                                <tr id="price"><td>Rs./</td><td>@item.Price</td>  </tr>
                                <tr id="rating">
                                    <td>Rating:</td>
                                    <td>
                                        @for (int i = 0; i < @item.Rating; i++)
                                        {
                                            <span class="fa fa-star checked"></span>
                                        }
                                    </td>
                                </tr>
                            </table>

                        </div>
                        <div class="modal-footer" >
                            <div class="row">
                                <div class="col-md-2">
                                    @using (Html.BeginForm("Cart", "Users", FormMethod.Post))
                                    {

                                        @Html.EditorFor(model => @item.ProductID, new { htmlAttributes = new { @class = "form-control hidden" } })
                                        <input type="submit" formaction="@Url.Action("Cart1", "Users", new { ProductId = @item.ProductID,UserId=Session["Userlogin"]})" value="Add to Cart" class="btn btn-Yellow">
                                    }
                                </div>
                                <div class="col-md-2">
                                    @using (Html.BeginForm("Buy", "Product", FormMethod.Post))
                                    {
                                        @Html.EditorFor(model => @item.ProductID, new { htmlAttributes = new { @class = "form-control hidden" } })
                                        <input type="submit" formaction="@Url.Action("Buy", "Product", new { ProductId = @item.ProductID,UserId=Session["Userlogin"] })" value="Buy Now" class="btn btn-Orange">
                                    }
                                 </div>
                            </div>
                        </div>
                            </div>
                                    </div>
                                </div>


        }

    </div>
</div>

 