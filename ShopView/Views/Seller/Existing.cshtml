@model IEnumerable<DBcontext.DBModels.Product>

@{
    ViewBag.Title = "Existing";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}

<br />

<div class="body-content">
    <div id="Existing" class="row">
        @foreach (var item in Model)
        {

        <div class="col-md-4" style="padding: 15px 15px 15px 15px">
            <img src="@item.ImageLink" />
            <table>

                <tr id="productname">@item.Name - @item.Model</tr>
                <tr id="price">
                    <td>Rs./</td>
                    <td>@item.Price</td>
                    <td rowspan="2" style="right: -50%; position: relative;">     
                        @using (Html.BeginForm("Cart", "Seller", FormMethod.Post))
                        {

                            <input type="submit" formaction="@Url.Action("Delete", "Seller", new { ProductId = @item.ProductID})" value="Delete" class="btn btn-danger">
                        }
                    </td>
                </tr>
                <tr id="rating">
                    <td>Rating:</td>
                    <td>
                        @for (int i = 0; i < @item.Rating; i++)
                        {
                            <span class="fa fa-star checked"></span>
                        }
                    </td>

             
                </tr>
            </table>
        </div>

        }
    </div>

</div>



